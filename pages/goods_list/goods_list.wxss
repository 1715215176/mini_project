.first_tab .goods_items {
  display: flex;
  border-bottom: 1px solid #f0f0f0;
  padding: 20rpx;
}
.first_tab .goods_items .goods_img_warp {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_items .goods_img_warp image {
  width: 70%;
}
.first_tab .goods_items .goods_info_warp {
  flex: 7;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_items .goods_info_warp .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 30rpx;
  color: #1c2c3f;
}
.first_tab .goods_items .goods_info_warp .goods_price {
  color: var(--themeColor);
}
