page {
  background-color: #bbbaba;
}
.user_info_warp {
  height: 45vh;
  overflow: hidden;
}
.user_info_warp .login {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  font-size: 40rpx;
  color: #fff;
}
.user_info_warp .user_img_warp {
  position: relative;
}
.user_info_warp .user_img_warp .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_warp .user_img_warp .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
}
.user_info_warp .user_img_warp .user_info .user_mine_bg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 27rpx;
}
.user_info_warp .user_img_warp .user_info .user_name {
  text-align: center;
  padding-top: 10rpx;
  color: #fff;
  font-size: 40rpx;
}
.user_content {
  position: relative;
}
.user_content .his_main {
  position: absolute;
  width: 90vw;
  left: 50%;
  transform: translateX(-50%);
  top: -60rpx;
}
.user_content .his_main .history_warp {
  background: #fff;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
}
.user_content .his_main .history_warp navigator {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user_content .his_main .history_warp navigator .his_num {
  color: var(--themeColor);
}
.user_content .his_main .orders_warp {
  background-color: #fff;
  margin-top: 15rpx;
}
.user_content .his_main .orders_warp .order_title {
  padding: 0 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: larger;
  border-bottom: 1px solid #888;
}
.user_content .his_main .orders_warp .order_content {
  background: #fff;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
}
.user_content .his_main .orders_warp .order_content navigator {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user_content .his_main .address_warp {
  margin-top: 20rpx;
  padding: 0 20rpx;
  height: 70rpx;
  background-color: #fff;
  line-height: 70rpx;
}
.user_content .his_main .app_info_warp {
  margin-top: 20rpx;
  background-color: #fff;
}
.user_content .his_main .app_info_warp .app_info_item {
  border-bottom: 1px solid #888;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
}
.user_content .his_main .app_info_warp .photo {
  display: flex;
  justify-content: space-between;
}
.user_content .his_main .recommend_warp {
  margin-top: 20rpx;
  padding: 0 20rpx;
  height: 70rpx;
  background-color: #fff;
  line-height: 70rpx;
}
